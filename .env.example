# Database
DATABASE_URL="postgresql://user:password@localhost:5432/nest_pizza?schema=public"

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development

# Rate limiting (protecție anti-flood)
# THROTTLE_TTL = interval în secunde în care se numără request-urile (default: 60)
# THROTTLE_LIMIT = număr maxim de request-uri per IP în acel interval (default: 100)
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS Configuration
# Permite origin-uri multiple separate prin virgulă
# Exemple: "http://localhost:3000,http://localhost:3001,https://example.com"
# Pentru a permite toate origin-urile (DOAR în development), folosește "*"
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:4200"

# Producție (doar pe VPS, pentru docker-compose.prod.yml)
# GHCR_IMAGE=ghcr.io/OWNER/REPO:latest

# Cloudinary Configuration
# Obține aceste valori din dashboard-ul Cloudinary: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
