# Database
DATABASE_URL="postgresql://user:password@localhost:5432/nest_pizza?schema=public"

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development

# CORS Configuration
# Permite origin-uri multiple separate prin virgulă
# Exemple: "http://localhost:3000,http://localhost:3001,https://example.com"
# Pentru a permite toate origin-urile (DOAR în development), folosește "*"
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:4200"
